{
  "name": "forte-ui",
  "version": "0.1.0",
  "description": "A production-ready React UI component library with custom design system and Plus Jakarta Sans typography",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "tokens:build": "cd packages/tokens && bun run build",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@turbo/gen": "^2.3.3",
    "@types/bun": "latest",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "style-dictionary": "^4.2.0",
    "turbo": "^2.3.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.11"
}
